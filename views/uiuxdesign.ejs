<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>UI/UX Design</title>
</head>
<body id="mainbackgrounddesign">
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h2 id="ds1">UI/UX Design</h2>
            <p id="ds1">Below are some of my works. Click on each to explore more about them!</p>
        </div>

        <!-- GA -->
        <div class="row mb-5">
            <div class="col-md-6">
                <!-- Clickable Image that triggers the modal -->
                <a href="#" data-bs-toggle="modal" data-bs-target="#project1Modal">
                    <img src="/images/MB.png" class="img-fluid" alt="Project 1">
                </a>
            </div>
            <div class="col-md-6 d-flex flex-column justify-content-center">
                <h3 id="ds2">Design GA</h3>
                <p id="ds2">This is a description of Project 1.</p>
            </div>
        </div>

        <!-- Modals Section -->
        <!-- GA Modal with Carousel -->
        <div class="modal fade" id="project1Modal" tabindex="-1" aria-labelledby="project1ModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Bootstrap Carousel for GA Images -->
                        <div id="project1Carousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <!-- First Image -->
                                <div class="carousel-item active">
                                    <img src="/images/DesignGA1.png" class="d-block w-100" alt="Design GA Image 1">
                                </div>
                                <!-- Second Image -->
                                <div class="carousel-item">
                                    <img src="/images/DesignGA2.png" class="d-block w-100" alt="Design GA Image 2">
                                </div>
                                <!-- Third Image -->
                                <div class="carousel-item">
                                    <img src="/images/DesignGA3.png" class="d-block w-100" alt="Design GA Image 3">
                                </div>
                                <!-- Fourth Image -->
                                <div class="carousel-item">
                                    <img src="/images/DesignGA4.png" class="d-block w-100" alt="Design GA Image 4">
                                </div>
                                <!-- Fifth Image -->
                                <div class="carousel-item">
                                    <img src="/images/DesignGA5.png" class="d-block w-100" alt="Design GA Image 5">
                                </div>
                                <!-- Sixth Image -->
                                <div class="carousel-item">
                                    <img src="/images/DesignGA6.png" class="d-block w-100" alt="Design GA Image 6">
                                </div>
                                <!-- Seventh Image -->
                                <div class="carousel-item">
                                    <img src="/images/MB.png" class="d-block w-100" alt="Design GA Image 7">
                                </div>
                            </div>

                            <!-- Carousel Controls -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#project1Carousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#project1Carousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Project 2 -->
        <div class="row mb-5">
           <div class="col-md-6">
              <!-- Clickable Image that triggers the modal -->
              <a href="#" data-bs-toggle="modal" data-bs-target="#project2Modal">
                 <img src="/images/Design2.png" class="img-fluid" alt="Project 2">
              </a>
           </div>
           <div class="col-md-6 d-flex flex-column justify-content-center">
               <h3 id="ds2">Design Works</h3>
               <p id="ds2">This is a description of Project 2.</p>
           </div>
        </div>

        <!-- Modals Section -->
        <!-- Project 2 Modal with Carousel -->
        <div class="modal fade" id="project2Modal" tabindex="-1" aria-labelledby="project2ModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Bootstrap Carousel for Project 2 Images -->
                        <div id="project2Carousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <!-- First Image -->
                                <div class="carousel-item active">
                                    <img src="/images/Design1.png" class="d-block w-100" alt="Coding Works Image 1">
                                </div>
                                <!-- Second Image -->
                                <div class="carousel-item">
                                    <img src="/images/Design2.png" class="d-block w-100" alt="Coding Works Image 2">
                                </div>
                                <!-- Third Image -->
                                <div class="carousel-item">
                                    <img src="/images/Design3.png" class="d-block w-100" alt="Coding Works Image 3">
                                </div>
                                <!-- Fourth Image -->
                                <div class="carousel-item">
                                    <img src="/images/Design4.png" class="d-block w-100" alt="Coding Works Image 4">
                                </div>
                                <!-- Fifth Image -->
                                <div class="carousel-item">
                                    <img src="/images/Design5.png" class="d-block w-100" alt="Coding Works Image 5">
                                </div>
                                <!-- Sixth Image -->
                                <div class="carousel-item">
                                    <img src="/images/Design6.png" class="d-block w-100" alt="Coding Works Image 6">
                                </div>
                            </div>

                            <!-- Carousel Controls -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#project2Carousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#project2Carousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <a id="" href="/design" class="btn btn-primary">Back</a>
        </div>

    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
</body>
</html>